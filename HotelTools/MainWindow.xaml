<hc:Window
    x:Class="HotelTools.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HotelTools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:hc="https://handyorg.github.io/handycontrol"
    Title="MainWindow"
    Width="800"
    Height="450"
    Style="{StaticResource WindowWin10}"
    ShowNonClientArea="True"
    
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="ramin 1"/>
                <MenuItem Header="ramin 1"/>
                <MenuItem Header="ramin 1"/>
                <Separator/>
                <MenuItem Header="ramin 1"/>
            </MenuItem>
            <MenuItem Header="File" />
            <MenuItem Header="File" />
        </Menu>
        <Frame Grid.Row="1" x:Name="_frame"/>



        <StatusBar
            Grid.Row="2"
            Height="25"
            ClipToBounds="True" />

    </Grid>
</hc:Window>
